<Pane fx:id="root" prefHeight="595.0" prefWidth="766.0" style="-fx-background-color: #A7C7E7;" stylesheets="@../css/canvas.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.ZenMode">
   <children>
      <PieChart fx:id="modelResultsPieChart" layoutX="57.0" layoutY="328.0" prefHeight="262.0" prefWidth="612.0" title="DL Model Top Predictions" />
      <AnchorPane layoutY="-6.0" prefHeight="42.0" prefWidth="766.0">
         <children>
            <Label layoutX="232.0" layoutY="6.0" prefHeight="27.0" prefWidth="301.0" text="Quick, Draw! SE206 Edition" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="211.0" layoutY="42.0" prefHeight="42.0" prefWidth="351.0">
         <children>
            <Label fx:id="targetWordLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="18.0" layoutY="7.0" prefHeight="27.0" prefWidth="314.0" text="">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <VBox layoutX="562.0" layoutY="76.0" prefHeight="262.0" prefWidth="122.0" spacing="20.0">
         <children>
            <Button fx:id="readyButton" mnemonicParsing="false" onAction="#onReady" prefHeight="25.0" prefWidth="67.0" styleClass="gameButtons" text="Ready">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <Button fx:id="saveDrawingButton" mnemonicParsing="false" onAction="#onSaveCurrentSnapshotOnFile" prefHeight="25.0" prefWidth="110.0" styleClass="gameButtons" text="Save Drawing">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#initializeCanvas" prefHeight="25.0" prefWidth="67.0" styleClass="gameButtons" stylesheets="@../css/canvas.css" text="Draw">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <Button fx:id="clearButton" lineSpacing="10.0" mnemonicParsing="false" onAction="#onClear" prefHeight="25.0" prefWidth="55.0" styleClass="gameButtons" text="Clear">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <Button fx:id="restartButton" lineSpacing="10.0" mnemonicParsing="false" onAction="#onRestart" prefHeight="26.0" prefWidth="72.0" styleClass="gameButtons" text="Restart">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Button>
            <ColorPicker fx:id="myColorPicker" style="-fx-background-color: white;">
               <value>
                  <Color />
               </value></ColorPicker>
         </children>
      </VBox>
      <Pane layoutX="126.0" layoutY="85.0" prefHeight="243.0" prefWidth="400.0" style="-fx-background-color: white;">
         <children>
            <Canvas fx:id="canvas" height="243.0" width="400.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Canvas>
         </children>
      </Pane>
   </children>
</Pane>
